@model List<Product>
<div class="container" id="product-cards">
    <h1 class="text-center">PRODUCTS</h1>

    <div class="row" style="margin-top: 30px;">
        @foreach (var item in Model)
        {
            <div class="col-md-3 py-3 py-md-0">
                <div class="card">
                    <img src="~/ProductImage/@item.ProductImg" alt="">
                    <div class="card-body">
                        <h3 class="text-center">@item.ProductName</h3>
                        <p class="text-center">@item.ProductDesc</p>
                        <h2>
                            $@item.ProductPrice <span>
                                <a href="/Home/ProductDetails/@item.ProductId"><i class="fa-solid fa-cart-shopping"></i></a>
                                <a href="/Home/WishDetails/@item.ProductId">
                                    <i class="fa-solid fa-heart"></i>
                                </a>
                            </span>
                        </h2>
                    </div>
                </div>
                <br />
            </div>

        }
    </div>

</div>





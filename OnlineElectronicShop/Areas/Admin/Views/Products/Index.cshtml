@model List<Product>
<section class="content">
    <div class="container-fluid ">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Category Table</h3>
                    </div>
                    <div>

                        <a class="btn btn-primary" asp-controller="Products" asp-action="Create" asp-area="Admin">
                            Add Products
                        </a>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                           
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Images</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Action</th>
                               
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductDesc</td>
                                        <td>
                                            <img src="~/ProductImage/@item.ProductImg" style="height:50px;width:50px" />
                                        </td>
                                        <td>@item.ProductPrice</td>
                                        <td>@item.Category.CatName</td>
                                        <td>
                                            <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-primary border-dark">Edit Products</a>
                                            <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-danger border-dark">Delete Products</a>
                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>



